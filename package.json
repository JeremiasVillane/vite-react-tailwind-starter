{
  "name": "vite-react-typescript-tailwind-docker-starter",
  "version": "0.1.0",
  "private": true,
  "author": "Jeremias Villane (forked from sozonome/vite-react-tailwind-starter)",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:docker": "tsc && vite build --mode docker",
    "preview": "vite preview",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix && pnpm format",
    "type-check": "tsc",
    "check:turbo": "pnpm dlx turbo@latest lint type-check",
    "format": "prettier --write src",
    "up-interactive": "pnpm up -i",
    "up-latest": "pnpm up-interactive -L",
    "push-release": "git push --follow-tags origin main",
    "prepare": "husky install",
    "docker:build": "tsc && docker build -t docker-react .",
    "docker:run": "docker rm -f docker-react && docker run --name docker-react -d -p 8082:8082 docker-react",
    "release:local": "pnpm docker:build && pnpm docker:run",
    "log:tree": "tree -N -I \"node_modules|.git|.idea\" -a"
  },
  "dependencies": {
    "@fontsource/plus-jakarta-sans": "^5.0.19",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "million": "3.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.4",
    "react-router-dom": "^6.22.3",
    "tailwind-merge": "^2.2.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.1.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@tailwindcss/typography": "^0.5.12",
    "@types/node": "^20.12.7",
    "@types/react": "18.2.78",
    "@types/react-dom": "^18.2.25",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "autoprefixer": "^10.4.19",
    "commitlint": "^19.2.1",
    "eslint": "^8.57.0",
    "eslint-config-sznm": "^2.0.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "tailwindcss": "^3.4.3",
    "typescript": "5.4.5",
    "vite": "^5.2.8",
    "vite-plugin-checker": "^0.6.4",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "engines": {
    "node": ">=16.x.x",
    "pnpm": ">=8"
  }
}
